<?xml version="1.0"?>

<launch>
  
  <node
        name="pointcloud_to_laserscan"
        pkg="pointcloud_to_laserscan"
        type="pointcloud_to_laserscan_node" >
        <remap from="cloud_in" to="/zed/zed_node/point_cloud/cloud_registered"/>
        <remap from="scan" to="/zed/scan"/>
        <rosparam>
          target_frame: zed_left_camera_frame
          transform_tolerance: 0.01
          min_height: 0.0
          max_height: 1.0

          angle_min: -0.7854 # -M_PI/4 # -1.0471 # -M_PI/3
          angle_max: 0.7854 # M_PI/4 # 1.0471 # M_PI/3
          angle_increment: 0.00435 # M_PI/360.0
          scan_time: 0.05
          range_min: 0.03
          range_max: 20
          use_inf: true
          inf_epsilon: 1.0
          concurrency_level: 1
        </rosparam>
  </node>
      <!-- Concurrency level, affects number of pointclouds queued for processing and number of threads used
      0 : Detect number of cores
      1 : Single threaded
      2->inf : Parallelism level -->

      <!-- Move Base -->
    <include file="$(find aion_control)/launch/move_base.launch">
        <arg name="cmd_vel_topic" value="cmd_vel" />
        <arg name="odom_topic" value="UGV/odom" />
    </include>

</launch>
